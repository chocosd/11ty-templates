---
layout: 'layouts/base.njk'
---

<div class="copy-html-container">
{% set css %}
{% include 'template1.css' %}
{% endset %}
<!-- Copied from my template builder -->
    <style>
        {{ css | safe }}
    </style>
    <div class="home-container">
        <div class="central-container">
            <img class="logo" src="{{ titleLogo | url }}">
            <div class="content-container">
                <div class="header-container">
                    <div class="text-container">
                        <p>{{ titleDescription }}</p>
                        <cc-open-module class="button-widget" id="">
                            <div>
                                <h2>{{ primaryCTA }}</h2>
                                <span>{{ primaryCTADescription }}</span>
                            </div>
                            <img class="arrow accent" src="{{ widgetArrow | url }}">
                        </cc-open-module>
                    </div>
                <video allowfullscreen="" controls poster="{{ titleVideoPoster | url }}">
                    <source src="{{ titleVideo | url }}" type="video/mp4">
                </video>                
                </div>

                <div class="menu-container">
                    <cc-open-module class="widget" id="">
                        <div class="widget-image" style="background-image:url('{{ widget1Img | url }}');"></div>
                        <h2>{{ widget1Name }}</h2>
                        <img class="arrow" src="{{ widgetArrow | url }}">
                    </cc-open-module>
                    <cc-open-module class="widget" id="">
                        <div class="widget-image" style="background-image:url('{{ widget2Img | url }}');"></div>
                        <h2>{{ widget2Name }}</h2>
                        <img class="arrow" src="{{ widgetArrow | url }}">
                    </cc-open-module>
                    <cc-open-module class="widget" id="">
                        <div class="widget-image" style="background-image:url('{{ widget3Img | url }}');"></div>
                        <h2>{{ widget3Name }}</h2>
                        <img class="arrow" src="{{ widgetArrow | url }}">
                    </cc-open-module>
                    <cc-open-module class="widget" id="">
                        <div class="widget-image" style="background-image:url('{{ widget4Img | url }}');"></div>
                        <h2>{{ widget4Name }}</h2>
                        <img class="arrow" src="{{ widgetArrow | url }}">
                    </cc-open-module>
                    <cc-open-module class="widget" id="">
                        <div class="widget-image" style="background-image:url('{{ widget5Img | url }}');"></div>
                        <h2>{{ widget5Name }}</h2>
                        <img class="arrow" src="{{ widgetArrow | url }}">
                    </cc-open-module>
                    <cc-open-module class="widget" id="">
                        <div class="widget-image" style="background-image:url('{{ widget6Img | url }}');"></div>
                        <h2>{{ widget6Name }}</h2>
                        <img class="arrow" src="{{ widgetArrow | url }}">
                    </cc-open-module>
                </div>
            </div>
        </div>
    </div>
</div>
<button class="copy-html-button">
    copy to clipboard
</button>
{% set js %}
    {% include "copyToClipboard.js" %}
{% endset %}
<script>
    {{ js | safe}}
</script>